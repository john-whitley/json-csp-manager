{
  "env": {
    "es6": true,
    "amd": false,
    "browser": true,
    "jasmine": false,
    "mocha": false,
    "node": true
  },
  "extends": "nightmare-mode",
  "rules": {
    "no-restricted-syntax": 0,
    "arrow-parens": [2, "always"],
    "arrow-spacing": [2, { "before": true, "after": true }],
    "require-jsdoc": ["error", { "require": { "FunctionDeclaration": true, "MethodDefinition": true, "ClassDeclaration": true } }]
  }
}
